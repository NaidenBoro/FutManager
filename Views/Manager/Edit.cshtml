@model FutManager.Data.ManagerAndClubsAndNations

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="manager.FirstName" class="control-label"></label>
                <input asp-for="manager.FirstName" class="form-control" name="FirstName"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manager.LastName" class="control-label"></label>
                <input asp-for="manager.LastName" class="form-control" name="LastName"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manager.Age" class="control-label"></label>
                <input asp-for="manager.Age" class="form-control" name="Age"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manager.NationalityId" class="control-label"></label>
                <select asp-for="manager.NationalityId" class="form-control" name="NationalityId">
                    <option value="" selected disabled hidden>Choose here</option>
                    @foreach(var item in Model.Nations)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="NationalityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manager.ClubId" class="control-label"></label>
                <select asp-for="manager.ClubId" class="form-control" name="ClubId">
                    <option value="" selected disabled hidden>Choose here</option>
                    @foreach(var item in Model.Clubs)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="ClubId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manager.Rating" class="control-label"></label>
                <input asp-for="manager.Rating" class="form-control" name="Rating"/>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="manager.isReal" name="isReal"/> @Html.DisplayNameFor(model => model.manager.isReal)
                </label>
            </div>
            <div class="form-group">
                <div>
                    <label class="control-label">Password</label>
                </div>
                <div >
                    <input class="form-control" type="password" name="password" />
                </div>
                <input type="hidden" value = @Model.manager.Id name="id">
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
