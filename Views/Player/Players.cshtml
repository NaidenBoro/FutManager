@model IEnumerable<FutManager.Models.Player>
@{
    List<Nation> listNations = ViewBag.Nations;  
    List<Club> listClubs = ViewBag.Clubs;  
    List<Player> listPlayers = ViewBag.Players;  
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
