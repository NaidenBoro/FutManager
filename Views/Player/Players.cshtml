            </th>
            <th>
                @Html.DisplayNameFor(model => model.isReal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in listPlayers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FisrtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShirtNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => listNations.Where(x => x.Id == item.NationalityId).First().Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => listClubs.Where(x => x.Id == item.ClubId).First().Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Overall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isReal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
