@model FutManager.Models.Nation

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confederation" class="control-label"></label>
                <input asp-for="Confederation" class="form-control" />
                <span asp-validation-for="Confederation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label class="control-label">Password</label>
                </div>
                <div >
                    <input class="form-control" type="password" name="password" />
                </div>
                <input type="hidden" value = @Model.Id name="id">
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
